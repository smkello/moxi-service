# 通用配置
PORT=5101
DB_TYPE=nedb
NEDB_DATA_DIR=./data
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB_NAME=content_management

# SDK心跳检测配置
# 心跳间隔（毫秒），默认30000（30秒）
SDK_HEARTBEAT_INTERVAL=30000
# 自定义密钥（可选，不提供则使用SDK默认密钥）
# SDK_HEARTBEAT_SECRET=your-secret-key
# 是否启用异常计数，默认true
SDK_HEARTBEAT_ENABLE_ERROR_COUNT=true
# 最大错误次数，达到此次数后标记为异常，默认3
SDK_HEARTBEAT_MAX_ERROR_COUNT=3
# 是否启用自动清理（超过2倍间隔未更新自动注销），默认true
SDK_HEARTBEAT_ENABLE_AUTO_CLEANUP=true
# 是否强制检查（所有接口都需要验证心跳），默认false
# SDK_HEARTBEAT_FORCE_CHECK=false

# 认证服务配置
# 登录令牌校验接口地址
# AUTH_API_URL=http://localhost:3000/openapi/memberships/login/verify

# Debug 模式配置
# 开启 debug 模式，会输出详细的调试信息
DEBUG=true

